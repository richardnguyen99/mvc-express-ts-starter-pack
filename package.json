{
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/compression": "^1.7.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.11",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.0.2",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "sass": "^1.32.10",
    "shelljs": "^0.8.4",
    "typescript": "^4.2.4",
    "wait-on": "^5.3.0",
    "webpack": "^5.32.0",
    "webpack-cli": "^4.6.0",
    "webpack-node-externals": "^2.5.2"
  },
  "name": "mvc-express-ts-starter-pack",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:richardnguyen99/mvc-express-ts-starter-pack.git",
  "author": "richardnguyen99 <richard.ng0616@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^4.6.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "morgan": "^1.10.0"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "watch:server": "wait-on dist/main.bundle.js && node scripts/copyStaticAssets.js && nodemon dist/main.bundle.js",
    "watch:compiler": "webpack --watch",
    "watch:sass": "sass --watch src/public/scss/main.scss dist/public/css/main.css",
    "watch:view": "tsc --watch --baseUrl ./src/public/ts --outDir ./dist/public/js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Webpack,Server,SCSS,View\" -c \"cyan.bold,green.bold,blue.bold,red.bold\" \"yarn run watch:compiler\" \"yarn run watch:server\" \"yarn run watch:sass\" \"yarn run watch:view\""
  }
}
